config SM_TWI
	bool "Access TWI interface with Serial Modem AT command"
	select I2C
	default y if "$(dt_nodelabel_enabled,i2c0)" || \
		     "$(dt_nodelabel_enabled,i2c1)" || \
		     "$(dt_nodelabel_enabled,i2c2)" || \
		     "$(dt_nodelabel_enabled,i2c3)"
